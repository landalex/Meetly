            <!-- </intent-filter> -->

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cmpt276.meetly.Parent" />
        </activity>
        //Parent Activity
        <activity
            android:name=".Parent"
            android:label="@string/title_activity_parent" >
        </activity>
        <activity
            android:name=".Database"
            android:label="@string/title_activity_database" >
        </activity>

        <activity
            android:name=".MapLocationSelect"
            android:label="@string/title_activity_map_location_select" >
