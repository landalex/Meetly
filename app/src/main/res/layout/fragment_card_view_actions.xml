<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/actions_padding"
    android:gravity="end"
    android:paddingLeft="@dimen/actions_padding_left"
    android:paddingRight="@dimen/actions_padding_left">

    <ImageButton
        android:id="@+id/ic1"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_create_grey"
        android:background="?android:selectableItemBackground"
        style="@style/card.native.actions.button"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/fragment_card_edit_description" />


    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/ic2"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_delete_grey"
        style="@style/card.native.actions.button"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/fragment_card_delete_description" />

    <ImageButton
        android:scaleType="fitCenter"
        android:id="@+id/ic3"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_group_add_grey"
        style="@style/card.native.actions.button"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/fragment_card_invite_description" />

</LinearLayout>
