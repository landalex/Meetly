<resources>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>


        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/green</item>
        <!-- Support library compatibility -->
        <item name="background">@color/green</item>
        <!--<item name="android:elevation">0dp</item> -->
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>

    <style name="TitleHeadingTextStyle"  >
        <item name="android:textColor">@color/summer_sky_blue</item>
        <item name="android:textSize">55sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TaglineHeadingTextStyle"  >
        <item name="android:textColor">@color/steel_grey</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="MainHeadingTextStyle"  >
        <item name="android:textColor">@color/summer_sky_blue</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>